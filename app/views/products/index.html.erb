<div class="container mx-auto mt-12 px-5">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg text-center" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex flex-col md:flex-row justify-center md:justify-between items-center mb-5">
    <h1 class="font-bold text-4xl mb-5 md:mb-0">Products</h1>
    <%= link_to "New product", new_product_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium md:ml-5 text-center" %>
  </div>

  <div id="products" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5 justify-items-center">
    <%= render @products %>
  </div>
</div>
