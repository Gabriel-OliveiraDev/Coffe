<div class="max-w-md mx-auto bg-white p-8 rounded-md shadow-xl">
  <h2 class="text-2xl font-semibold mb-4">Seja bem-vindo</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mb-4" }) do |f| %>
    <%= render "clients/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :nome, class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.text_field :name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.email_field :email, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 font-semibold mb-1" %>
      <% if @minimum_password_length %>
        <span class="text-sm text-gray-500">(MÃ­nimo de <%= @minimum_password_length %> caracteres)</span>
      <% end %>
      <%= f.password_field :password, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", autocomplete: "new-password" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.password_field :password_confirmation, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", autocomplete: "new-password" %>
    </div>

    <div class="flex items-center justify-center">
      <%= f.submit "Cadastrar", class: "bg-yellow-600 hover:bg-yellow-700 text-white font-semibold px-4 py-2 rounded-md" %>
    </div>
  <% end %>
    <div class="flex items-center justify-center mt-5">
      <%= render "clients/shared/links" %>
    </div>
</div>
