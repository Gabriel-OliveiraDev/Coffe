<div class="max-w-md mx-auto bg-gray-100 p-8 rounded-lg shadow-xl">
  <h2 class="text-3xl font-semibold mb-6 text-center">Registre-se</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mb-8" }) do |f| %>
    <%= render "clients/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <%= f.label :nome, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-2 focus:ring-yellow-500 focus:border-transparent" %>
    </div>

    <div class="mb-6">
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.email_field :email, class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-2 focus:ring-yellow-500 focus:border-transparent", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-6">
      <%= f.label :endereço, "Endereço", class:"block text-gray-700 font-semibold mb-2" %>
      <%= f.email_field :addres, class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-2 focus:ring-yellow-500 focus:border-transparent", autofocus: true, autocomplete: "address" %>
    </div>

    <div class="mb-6">
      <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
      <% if @minimum_password_length %>
        <span class="text-sm text-gray-500">(Mínimo de <%= @minimum_password_length %> caracteres)</span>
      <% end %>
      <%= f.password_field :password, class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-2 focus:ring-yellow-500 focus:border-transparent", autocomplete: "new-password" %>
    </div>

    <div class="mb-8">
      <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password_confirmation, class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-2 focus:ring-yellow-500 focus:border-transparent", autocomplete: "new-password" %>
    </div>

    <div class="flex justify-center">
      <%= f.submit "Cadastrar", class: "bg-yellow-500 hover:bg-yellow-600 text-white font-semibold px-6 py-3 rounded-lg shadow-md" %>
    </div>
  <% end %>
    
  <div class="flex justify-center mt-8">
    <%= render "clients/shared/links" %>
  </div>
</div>
