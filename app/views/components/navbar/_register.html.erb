<div data-controller="application" class="relative inline-block text-left shadow-md ">
    <button data-action="mouseenter->application#showLista mouseleave->application#hideListaWithDelay" type="button" 
    class="inline-flex justify-center w-full md:w-auto rounded-md px-3 py-3 bg-yellow-800 text-sm text-white hover:bg-yellow-700 font-semibold">
    Registre-se
    </button>
    <!-- Lista -->
    <div data-application-target="lista" class="hidden md:absolute md:z-10 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5"
            data-action="mouseenter->application#showLista mouseleave->application#hideListaWithDelay">
        <div class="py-2" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
            <%= link_to "Cliente", new_client_registration_path, class:"block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900", role:"menuitem"%>
            <%= link_to "Fornecedor", new_supplier_registration_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900", role:"menuitem" %>
        </div>
    </div>
</div>
