<div data-controller="application" class="shadow-lg rounded-md">
    <nav class="bg-yellow-500 py-5">
        <div class="container mx-auto flex justify-between items-center">
            <div class="ml-5 md:flex space-x-1">
                <%= link_to "Cafeteria", root_path, class: "shadow-md text-white text-xl font-semibold bg-yellow-800 px-3 py-3 rounded-md" %>
            </div>
            <div class="hidden md:flex space-x-1 mr-5">
                <%= link_to "Home", root_path, class: "shadow-md text-white font-semibold bg-yellow-800 px-3 py-2 rounded-md hover:bg-yellow-700" %>
                <%= link_to  "Comprar", products_path, class: "shadow-md text-white font-semibold bg-yellow-800 px-3 py-2 rounded-md hover:bg-yellow-700" %>
                <!-- Adicionar Pra cima -->
                <% unless client_signed_in? || supplier_signed_in? %>
                    <%= render "components/navbar/login" %>
                    <%= render "components/navbar/register" %>
                <% else %>
                    <% if client_signed_in? %>
                        <%= link_to "Sair", destroy_client_session_path, data: { turbo_method: :delete }, class: "text-white font-semibold bg-yellow-800 px-3 py-2 rounded-md hover:bg-yellow-700" %>
                    <% else %>
                        <%= link_to "Sair", destroy_supplier_session_path, data: { turbo_method: :delete}, class: "text-white font-semibold bg-yellow-800 px-3 py-2 rounded-md hover:bg-yellow-700" %>
                    <% end %>
                <% end %>
                
            </div>

            <div class="md:hidden">
                <button data-action="click->application#toggleMenu" class="text-white focus:outline-none" id="menu-toggle">
                    <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                    </svg>
                </button>
            </div>
        </div>
    </nav>
    <div data-application-target="menu" class="hidden md:hidden bg-yellow-700">
        <a href="#" class="block text-white hover:bg-yellow-400 px-4 py-2">Home</a>
        <a href="#" class="block text-white hover:bg-yellow-400 px-4 py-2">Sobre</a>
