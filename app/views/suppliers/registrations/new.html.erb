<div class="max-w-md mx-auto bg-gray-100 p-8 rounded-lg shadow-xl">
  <h2 class="text-3xl font-semibold mb-6 text-center">Registre-se novo Fornecedor</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "suppliers/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <%= f.label :nome, "Nome da empresa", class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "nome", class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-2 focus:ring-yellow-500 focus:border-transparent" %>
    </div>

    <div class="mb-6">
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-2 focus:ring-yellow-500 focus:border-transparent" %>
    </div>

    <div class="mb-6">
      <%= f.label :addres, "EndereÃ§o", class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :addres, autofocus: true, autocomplete: "addres", class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-2 focus:ring-yellow-500 focus:border-transparent" %>
    </div>

    <div class="mb-6">
      <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-2 focus:ring-yellow-500 focus:border-transparent"  %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-2 focus:ring-yellow-500 focus:border-transparent"   %>
    </div>

    <div class="flex justify-center">
      <%= f.submit "Cadastrar Fornecedor", class: "bg-yellow-500 hover:bg-yellow-600 text-white font-semibold px-6 py-3 rounded-lg shadow-md"%>
    </div>
  <% end %>

  <div class="flex justify-center mt-8">
    <%= render "suppliers/shared/links" %>
  </div>
</div>